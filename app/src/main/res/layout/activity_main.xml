<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

<ImageView
    android:layout_width="159dp"
    android:layout_height="147dp"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="15dp"
    android:src="@drawable/doggy" />

<TextView
    android:layout_width="159dp"
    android:layout_height="80dp"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="10dp"
    android:background="#FFA7A7"
    android:paddingLeft="20dp"
    android:paddingTop="25dp"
    android:text="반려견 정보 출력 창" />

<Button
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="80dp"
    android:layout_marginTop="60dp"
    android:id="@+id/gotofunc1"
    android:text="산책메이트 구하기" />

<Button
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="80dp"
    android:id="@+id/gotofunc2"
    android:text="주변상황알리미" />

<Button
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="80dp"
    android:id="@+id/gotofunc3"
    android:text="나만의 산책로" />


</LinearLayout>